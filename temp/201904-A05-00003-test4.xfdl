    <Script type="xscript5.1"><![CDATA[this.nShift = 0;
this.Grid00_onkeydown = function(obj:nexacro.Grid,e:nexacro.KeyEventInfo)
{
	if(obj.currentcell == 0){
		if(e.keycode == 16){
			this.nShift = 1;
		}
	}else{
		this.nShift = 0;
	}
};

this.Grid00_onlbuttonup = function(obj:nexacro.Grid,e:nexacro.GridMouseEventInfo)
{
	if(e.col == 0){
		if(this.nShift == 1){
			var nArray = obj.getSelectedRows();
			var nCnt = nArray.length;
			var nTot = this.Dataset00.getSum("Column0",nArray[0],nArray[nCnt-1]+1);
			
			this.Grid00.setCellProperty("body",0,"tooltiptext",nTot);
			this.PopupDiv00.form.Static00.set_text("합계 : "+nTot);
			this.PopupDiv00.trackPopupByComponent(obj,e.canvasx,e.canvasy);
			this.nShift = 0;
		}
	}
};

this.PopupDiv00_oncloseup = function(obj:nexacro.PopupDiv,e:nexacro.EventInfo)
{
	obj.form.Static00.set_text("");
};
]]></Script>
